{
    "name": "itsjustvita/symfony-boost",
    "description": "MCP Server für Symfony und Claude Code (PhpStorm)",
    "type": "library",
    "license": "MIT",
    "require": {
      "php": ">=8.1",
      "doctrine/dbal": "^3.0|^4.0",
      "symfony/console": "^6.0|^7.0",
      "symfony/dotenv": "^6.0|^7.0",
      "symfony/filesystem": "^6.0|^7.0"
    },
    "autoload": {
      "psr-4": {
        "SymfonyBoost\\": "src/"
      }
    },
    "bin": ["bin/symfony-boost"],
    "scripts": {
      "post-install-cmd": [
        "@symfony-boost-info"
      ],
      "post-update-cmd": [
        "@symfony-boost-info"
      ],
      "symfony-boost-info": [
        "echo ''",
        "echo '╔════════════════════════════════════════════════════╗'",
        "echo '║  Symfony Boost installed successfully!            ║'",
        "echo '╚════════════════════════════════════════════════════╝'",
        "echo ''",
        "echo 'Next step: Run the installation script'",
        "echo ''",
        "echo '  php vendor/bin/symfony-boost install'",
        "echo ''",
        "echo 'This will configure:'",
        "echo '  • .mcp.json - MCP Server configuration'",
        "echo '  • .claude/settings.local.json - Permissions'",
        "echo '  • CLAUDE.md - Documentation'",
        "echo ''",
        "echo 'For help: php vendor/bin/symfony-boost --help'",
        "echo ''"
      ]
    }
}
